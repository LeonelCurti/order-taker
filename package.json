{
  "name": "order-taker",
  "version": "1.0.0",
  "description": "Small business oriented application that allows to manage orders placed by clients.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LeonelCurti/order-taker.git"
  },
  "author": "leonel curti",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LeonelCurti/order-taker/issues"
  },
  "homepage": "https://github.com/LeonelCurti/order-taker#readme",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^8.6.0",
    "express": "^4.18.1",
    "express-fileupload": "^1.4.0",
    "express-validator": "^6.14.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.13.14",
    "xlsx": "^0.17.5"
  },
  "devDependencies": {
    "colors": "^1.4.0",
    "concurrently": "^5.3.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.16"
  }
